<% flash.each do |key, msg| %>
  <div class="alert alert-<%=key%> text-center" role="alert">
    <%= msg %>
  </div>
<% end %>

<h1 class="text-center">Connexion</h1>
<br/>
<%= form_tag url_for(action: 'create'), method: "post" do %>
  <div class="d-flex justify-content-around text-center">
    <div class="card " style="width: 18rem;">
      <div class="card-body">
        <p class="card-text">Email <%= text_field_tag 'email' %> </p>
        <p class="card-text">Mot de passe <%= password_field_tag 'password' %> </p>
        <hr class="my-4">
        <%= submit_tag "Connexion" %>
        <%= link_to "Inscription", new_user_path %>
      </div>
    </div>
  </div>
<% end %>